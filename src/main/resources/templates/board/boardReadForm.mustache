{{>layout/header}}
{{>layout/navigation/navbar}}
<!-- 게시판 -->
<main class="container">
    <!-- 카테고리 -->
    <ul class="nav nav-tabs my-4" id="category">
        <li class="nav-item">
            <a class="nav-link" id="ALL">전체</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="ANNOUNCE">공지</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="FREE">자유</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="QUESTION">질문</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="PROMOTION">홍보</a>
        </li>
    </ul>

    <!-- 게시글 조회 -->
    <div class="border border-secondary my-4 p-4">
        <div class="row">
            <div class="col-sm-10">
                <h3 class="my-4">{{board.title}}</h3>
            </div>
            <div class="col-sm text-right">
                <span>조회수 {{board.viewCount}}</span>
                <br>
                <span>{{board.nickname}}</span>
            </div>
        </div>
        <div class="form-group my-4">
            <textarea class="form-control" id="message" name="message" placeholder="내용" rows="10" readonly>{{board.content}}</textarea>
        </div>
        <button class="btn btn-primary my-2" onclick="location.href='/board/list'">글목록</button>
        <!-- To Do : 수정, 삭제 버튼은 권한 있을경우에만 보이기-->
        <input type="hidden" value="{{board.id}}" id="boardId">
        <button class="btn btn-dark my-2" onclick="location.href='/board/update/{{board.id}}'">수정</button>
        <button class="btn btn-secondary my-2" id="btn-remove">삭제</button>
    </div>
</main>
{{>layout/boardJSLink}}
{{>layout/footer}}
<script src="/js/board/boardReadForm.js" crossorigin="anonymous"></script>
