{{>layout/header}}
{{>layout/navigation/navbar}}
<!-- 게시판 -->
<main class="container">
    <!-- 카테고리 -->
    <ul class="nav nav-tabs my-4">
        <li class="nav-item">
            <a class="nav-link" href="#" id="ALL">전체</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="ANNOUNCE">공지</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="FREE">자유</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="QUESTION">질문</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#" id="PROMOTION">홍보</a>
        </li>
    </ul>
    <!-- 게시글 -->
    <table class="table">
        <thead>
        <tr>
            <th scope="col">제목</th>
            <th scope="col">카테고리</th>
            <th scope="col">글쓴이</th>
            <th scope="col">조회수</th>
            <th scope="col">작성일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#board}}
        <tr>
            <th scope="row"><a href="/board/read/{{id}}">{{title}}</a><span class="badge badge-dark m-1">{{replyCount}}</span></th>
            <td>{{boardType}}</td>
            <td>{{nickname}}</td>
            <td>{{viewCount}}</td>
            <td>{{createDate}}</td>
        </tr>
        {{/board}}
        </tbody>
    </table>
    <button type="button" onclick="location.href='/board/save'"
            class="btn btn-secondary float-right my-2 mx-3"
            id="btn-write">글쓰기</button>
</main>
{{>layout/boardJSLink}}
{{>layout/footer}}